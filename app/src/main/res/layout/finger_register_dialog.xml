<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_width="800dp"
    app:cardCornerRadius="10dp"
    android:layout_height="670dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/finger_register"
            android:layout_marginTop="42dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="42sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/dialog_back_id"
            android:src="@mipmap/icon_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp" />
        <LinearLayout
            android:background="@drawable/finger_dialog_lin_bg"
            android:layout_marginTop="165dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="600dp"
            android:layout_height="340dp">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/finger_register_dialog_img"
                    android:layout_marginTop="58dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="128dp"
                    android:layout_height="128dp"/>
                <TextView
                    android:text="姓名"
                    android:id="@+id/finger_register_tv_name"
                    android:layout_marginTop="202dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="ID: 003847494994"
                    android:id="@+id/finger_register_tv_id"
                    android:layout_marginTop="257dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#999999"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:background="#ffcccccc"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/finger_register_dialog_statue"
                    android:src="@mipmap/finger_null"
                    android:layout_marginTop="58dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="128dp"
                    android:layout_height="128dp"/>
                <TextView
                    android:id="@+id/finger_register_dialog_statue_tv"
                    android:text="@string/finger_register"
                    android:layout_marginTop="202dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/finger_register_tv_tip"
                    android:layout_marginTop="257dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FF7300"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


        </LinearLayout>


        <Button
            android:id="@+id/add_finger_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="534dp"
            android:textStyle="bold"
            android:textSize="32sp"
            android:text="确认添加"
            android:background="@drawable/btn_bg"
            android:layout_width="600dp"
            android:layout_height="88dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>