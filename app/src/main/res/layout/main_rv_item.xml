<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="257dp"
    android:padding="16dp"
    android:layout_height="347dp">
    <LinearLayout
        android:background="@drawable/btn_bg_lin"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="225dp"
        android:layout_height="315dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/img"
            android:layout_marginTop="26dp"
            android:id="@+id/main_rv_item_img"
            android:background="@drawable/shape_circle"
            android:layout_width="128dp"
            android:layout_height="128dp"/>
        <TextView
            android:textColor="#333333"
            android:text="张三丰"
            android:layout_marginTop="16dp"
            android:id="@+id/main_rv_item_name"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#999999"
            android:layout_marginTop="4dp"
            android:text="ID: 003847494994"
            android:id="@+id/main_rv_item_id"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:visibility="gone"
            android:textSize="18sp"
            android:textColor="#333333"
            android:id="@+id/main_rv_item_btn_register"
            android:text="指纹录入"
            android:layout_marginTop="13dp"
            android:background="@drawable/btn_bg"
            android:layout_width="176dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/main_rv_item_img_finger"
                android:layout_marginStart="24dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/finger_null"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <Button
                android:layout_marginStart="9dp"
                android:visibility="visible"
                android:textSize="18sp"
                android:textColor="#333333"
                android:id="@+id/main_rv_item_btn_del"
                android:text="删除指纹"
                android:background="@drawable/btn_bg_del"
                android:layout_width="127dp"
                android:layout_height="40dp"/>
        </LinearLayout>




    </LinearLayout>

</RelativeLayout>